{
  "name": "futoin-asyncsteps",
  "version": "1.5.5",
  "description": "FutoIn AsyncSteps - Reference Implementation. Adds classical linear program flow structure to async programming supporting exceptions. error handlers, timeouts, unlimited number of sub-steps, execution parallelism, loops and job state/context variables.",
  "main": "lib/asyncsteps.js",
  "browser": "dist/futoin-asyncsteps.js",
  "scripts": {
    "lint": "./node_modules/.bin/jshint lib --reporter=./node_modules/jshint-full-path/index.js",
    "checkStyle": "./node_modules/.bin/jscs .",
    "pretest": "npm run-script lint && npm run-script checkStyle",
    "test": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --recursive -R spec",
    "posttest": "./node_modules/.bin/istanbul check-coverage && ./node_modules/.bin/istanbul report html || true"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/futoin/core-js-ri-asyncsteps"
  },
  "keywords": [
    "futoin",
    "async",
    "steps",
    "parallel",
    "exceptions",
    "loops",
    "browser",
    "amd"
  ],
  "author": {
    "name": "Andrey Galkin",
    "email": "andrey@futoin.eu"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/futoin/core-js-ri-asyncsteps/issues",
    "email": "support@futoin.eu"
  },
  "devDependencies": {
    "chai": "^2.1.0",
    "grunt": "~0.4.5",
    "grunt-contrib-connect": "~0.9.0",
    "grunt-contrib-uglify": "~0.8.0",
    "grunt-jsdoc-to-markdown": "^1.2.1",
    "grunt-mocha-phantomjs": "^0.6.1",
    "grunt-npm-helper": "~0.0.2",
    "grunt-npm2bower-sync": "^0.8.1",
    "grunt-pure-cjs": "~1.4.0",
    "grunt-release": "~0.11.0",
    "grunt-text-replace": "*",
    "istanbul": "^0.3.6",
    "jscs": "^1.11.3",
    "jscs-jsdoc": "^1.3.1",
    "jsdoc": "^3.2.2",
    "jsdoc-to-markdown": "^1.3.6",
    "jshint": "^2.6.3",
    "jshint-full-path": "*",
    "mocha": "^2.5.3",
    "mocha-phantomjs": "3.5.3"
  },
  "dependencies": {
    "performance-now": "^0.2.0"
  }
}
